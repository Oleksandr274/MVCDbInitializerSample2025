@model IEnumerable<Week1Lab12026.Models.User>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.FirstName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.MidName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.LastName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.DOB)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.FirstName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.MidName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.LastName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DOB)
				</td>
				<td>
					<button class="btn btn-secondary">
						<a class="text-reset text-decoration-none" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
					</button>

					<button class="btn btn-primary">
						<a class="text-reset text-decoration-none" asp-action="Details" asp-route-id="@item.ID">Details</a>
					</button>

					<button class="btn btn-danger ">
						<a class="text-reset text-decoration-none" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
					</button>
				</td>
			</tr>
		}
	</tbody>
</table>
